{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#q-app/*": ["src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["quasar"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "quasar.d.ts"],
  "exclude": ["node_modules"]
}
